{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('season_edit', {'id': season.id}) }}">Mettre à jour</a>

    <br><br>

    {{ include('season/_delete_form.html.twig') }}

    <br>

    <a href="{{ path('season_index') }}">Retour à la liste</a>

{% endblock %}
