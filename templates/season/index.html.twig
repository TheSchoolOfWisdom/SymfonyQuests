{% extends 'base.html.twig' %}

{% block title %}Liste de saisons{% endblock %}

{% block body %}
    <h1>Liste de saisons</h1>

    <table class="table">
        <thead>
            <tr class="bg-dark text-white">
                <th>Id</th>
                <th>Numéro</th>
                <th>Année</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td><div class="md-truncate">{{ season.description }}</div></td>
                <td>
                    <a href="{{ path('season_edit', {'id': season.id}) }}">
                        <i class="fas fa-edit" style="font-size: 18px"></i>
                    </a>
                    <a href="{{ path('season_show', {'id': season.id}) }}">
                        <i class="fas fa-eye" style="font-size: 18px"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('season_new') }}">Créer un season</a>
{% endblock %}
