{% extends 'base.html.twig' %}

{% block title %}Liste des épisodes{% endblock %}

{% block body %}
    <h1>Liste des épisodes</h1>

    <table class="table">
        <thead>
            <tr class="bg-dark text-white">
                <th>Id</th>
                <th>Titre</th>
                <th>Numéro</th>
                <th>Synopsis</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.number }}</td>
                <td><div class="md-truncate">{{ episode.synopsis }}</div></td>
                <td>
                    <a href="{{ path('episode_edit', {'id': episode.id}) }}">
                        <i class="fas fa-edit" style="font-size: 18px"></i>
                    </a>
                    <a href="{{ path('episode_show', {'id': episode.id}) }}">
                        <i class="fas fa-eye" style="font-size: 18px"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('episode_new') }}">Créer un épisode</a>
{% endblock %}
